        <ComboBox x:Name="CbTitle" HorizontalAlignment="Left" Height="21" Margin="200,55,0,0" VerticalAlignment="Top"  MaxHeight="40" Width="220" VerticalContentAlignment="Center" />

        <ComboBox x:Name="CbBrand" HorizontalAlignment="Left" Height="20" Margin="200,90,0,0" VerticalAlignment="Top" Width="220" VerticalContentAlignment="Center" />
        <ComboBox x:Name="CbModel" HorizontalAlignment="Left" Height="20" Margin="200,125,0,0" VerticalAlignment="Top" Width="220" VerticalContentAlignment="Center" />
        <DatePicker x:Name="StartWork" HorizontalAlignment="Left" Margin="200,266,0,0" VerticalAlignment="Top" Width="220" Height="25"/>
        <ComboBox x:Name="CbCondition" HorizontalAlignment="Left" Margin="200,231,0,0" VerticalAlignment="Top" Width="220" Height="20"/>
        <Button x:Name="BtnAdd" Content="Добавить" HorizontalAlignment="Left" Height="38" Margin="400,340,0,0" VerticalAlignment="Top" Width="100" Click="BtnAdd_Click"/>
        <ComboBox x:Name="CbClass" HorizontalAlignment="Left" Margin="200,20,0,0" VerticalAlignment="Top" Width="220"  Height="22"/>
        <ComboBox x:Name="CbNumKab" HorizontalAlignment="Left" Height="21" Margin="200,160,0,0"  VerticalAlignment="Top" Width="220" VerticalContentAlignment="Center" />
        <TextBox x:Name="TbNumber" HorizontalAlignment="Left" Margin="200,195,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220" Height="21" VerticalContentAlignment="Center"/>
        <Button x:Name="BtnBack" Content="Назад" HorizontalAlignment="Left" Height="38" Margin="4,340,0,0" VerticalAlignment="Top" Width="100" Click="BtnBack_Click"/>
        <Button x:Name="BtnAddKab" Content="+" HorizontalAlignment="Left" Margin="430,160,0,0" VerticalAlignment="Top" Width="21" Height="21" Click="BtnAddKab_Click" FontWeight="Bold"/>
        <Button x:Name="BtnDellKab" Content="-" HorizontalAlignment="Left" Margin="460,160,0,0" VerticalAlignment="Top" Width="21" Height="21" Click="BtnDellKab_Click" FontWeight="Bold"/>
        <Button x:Name="BtnAddTitl" Content="+" HorizontalAlignment="Left" Margin="430,55,0,0" VerticalAlignment="Top" Width="21" Height="21" Click="BtnAddTitl_Click" FontWeight="Bold" />
        <Button x:Name="BtnDellTilt" Content="-" HorizontalAlignment="Left" Margin="460,55,0,0" VerticalAlignment="Top" Width="21" Height="21" Click="BtnDellTilt_Click" FontWeight="Bold" />
        <Label Content="Модель" HorizontalAlignment="Left" Margin="88,119,0,0" VerticalAlignment="Top" Width="76" HorizontalContentAlignment="Right" FontWeight="Bold" FontSize="15" Height="28"/>
