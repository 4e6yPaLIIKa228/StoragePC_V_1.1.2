<Window x:Class="YchetPer.AddTechnic"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YchetPer"
        mc:Ignorable="d"
        Title="Добавить" WindowState="Normal" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner" MinHeight="420" MinWidth="520"  MaxHeight="420" MaxWidth="520" Height="420" Width="520">
    <Grid>
        <Label Content="Тип" HorizontalAlignment="Left" Margin="123,16,0,0" VerticalAlignment="Top" Width="38" HorizontalContentAlignment="Right" FontSize="15" Height="28" FontWeight="Bold"/>
        <Label Content="Устройство" HorizontalAlignment="Left" Margin="69,49,0,0" VerticalAlignment="Top" Width="92" FontSize="15" FontWeight="Bold"/>
        <Label Content="Бренд" HorizontalAlignment="Left" Margin="105,84,0,0" VerticalAlignment="Top" Width="56" Height="30" FontSize="15" FontWeight="Bold"/>
        <Label Content="Кабинет" HorizontalAlignment="Left" Margin="85,152,0,0" VerticalAlignment="Top" Width="76" HorizontalContentAlignment="Right" FontWeight="Bold" FontSize="15"/>
        <Label Content="Номер" HorizontalAlignment="Left" Margin="100,187,0,0" VerticalAlignment="Top" Width="61" HorizontalContentAlignment="Right" FontWeight="Bold" FontSize="15"/>
        <Label Content="Состояние" HorizontalAlignment="Left" Margin="72,222,0,0" VerticalAlignment="Top" Width="92" HorizontalContentAlignment="Right" FontWeight="Bold" FontSize="15"/>
