        <Button x:Name="BtnDelBrend" Content="-" HorizontalAlignment="Left" Margin="460,90,0,0" VerticalAlignment="Top" Width="21" Height="20" Click="BtnDelBrend_Click" FontWeight="Bold" />
        <Button x:Name="BtnAddModel" Content="+" HorizontalAlignment="Left" Margin="430,125,0,0" VerticalAlignment="Top" Width="21" Height="20" FontWeight="Bold" Click="BtnAddModel_Click"  />
        <Button x:Name="BtnDelModel" Content="-" HorizontalAlignment="Left" Margin="460,125,0,0" VerticalAlignment="Top" Width="21" Height="20" FontWeight="Bold" Click="BtnDelModel_Click" />
    </Grid>
</Window>
